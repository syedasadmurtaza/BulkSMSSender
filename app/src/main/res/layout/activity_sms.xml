<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SmsActivity" >


    <EditText
        android:id="@+id/enumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etext"
        android:layout_below="@+id/etext"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Enter Number" >


    </EditText>

    <EditText
        android:id="@+id/smsno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enumber"
        android:layout_below="@+id/enumber"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="No. of SMS to send" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/smsno"
        android:layout_below="@+id/smsno"
        android:layout_marginTop="53dp"
        android:text="Send" />

    <EditText
        android:id="@+id/etext"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:ems="10"
        android:hint="Enter Text to send">
        <requestFocus />
        </EditText>


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:text="Developed By AM" />

</RelativeLayout>
